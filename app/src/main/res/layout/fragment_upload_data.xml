<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadData">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
android:layout_margin="20dp"
       android:background="@color/grey"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
<TextView
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textSize="16dp"
    android:gravity="center"
    android:text="Alot Mentors to Mentee"/>
       <LinearLayout
           android:padding="10dp"
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <Button
                   android:layout_margin="5dp"
                   android:id="@+id/uploadbuttonformentor"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Select Mentor List"/>
               <TextView
                   android:id="@+id/mentorcsv"
                   android:layout_margin="5dp"
                   android:text=""
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   ></TextView>
           </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
        android:layout_margin="5dp"
        android:id="@+id/uploadbuttonformentee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Mentee List"/>
    <TextView
        android:id="@+id/studentcsv"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_height="wrap_content"></TextView>
</LinearLayout>





       </LinearLayout>
       <Button
           android:padding="10dp"
           android:layout_margin="5dp"
           android:id="@+id/alotmentortomentee"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Alot Mentor"/>
       <TextView
           android:id="@+id/output"
           android:layout_width="wrap_content"
           android:gravity="center_horizontal"
           android:layout_height="wrap_content"
           android:text=""
           />
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_marginVertical="10dp"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Upload New Mentor List?"
                  />
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Upload New Mentee List?"
                   />
           </LinearLayout>


       </ScrollView>

   </LinearLayout>

</FrameLayout>